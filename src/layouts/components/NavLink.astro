---
export interface Props {
  title: string,
  href: string,
  className?: string,
  isDropdown?: boolean,
  hasUnderline?: boolean,
  underlineClassName?: string,
}

const {
  title, 
  href, 
  className, 
  isDropdown = false, 
  hasUnderline = false,
  underlineClassName = 'h-0.5 bg-black'
  } = Astro.props;
---

<a
  class={`${className} group inline-block relative`}
  href={href}>
  <span>
    {title}
  </span>
  {hasUnderline && (
    <div class={`w-full ${underlineClassName} absolute rounded-full bottom-0 left-0 origin-left scale-x-0 transition-transform duration-300 ease-in-out group-hover:scale-x-100`}/>
  )}
</a>