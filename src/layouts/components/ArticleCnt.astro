---
import { Image } from "astro:assets"
import PlaceHolderImage from '/public/images/placeholder/Image Not Found.png'
import Button from "./Button.astro";
export interface Props {
  title: string,
  subtitle?: string,
  date?: string,
  content?: string,
  href?: string,
  reverse?: boolean,
  image?: ImageBitmap
}

const {title, subtitle, date, content, reverse = false, href = '/'} = Astro.props;
---

<article class="grid grid-cols-1 md:grid-cols-2 items-center gap-5 h-full p-5">
  <a
    href={href}
    class={`flex items-center justify-center h-80 overflow-hidden
      ${reverse ? 'md:order-last' : 'md:order-first'}
    `}>
    <Image
      src={PlaceHolderImage}
      alt={PlaceHolderImage.src}
      width={400}
      height={400}
      class={'object-cover w-full overflow-hidden h-full'}
    />
  </a>

  <div class="flex h-full w-full flex-col items-start gap-5">
    <div class="flex flex-col items-start">
      <h1 class="text-3xl md:text-4xl lg:text-5xl tracking-tight">
        {title}
      </h1>
      <h2 class="text-gray-600 font-light text-base md:text-lg lg:text-xl">
        {subtitle}
      </h2>
    </div>
    <p class=" text-black tracking-tighter text-base md:text-lg">
      {content}
    </p>
    <Button
      buttonText="View more"
      className="text-black hover:bg-black hover:text-white hover:border-black"
      isOutline={true}
    />
  </div>
</article>